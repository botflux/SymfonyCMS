{% extends 'admin/base.html.twig' %}

{% block title 'CMS - Tag Management' %}

{% block body %}
        <table class="table is-striped is-bordered">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Name</th>
                    <th>Project related count</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                {% for tag in tags %}
                    <tr>
                        <td>{{ tag.id }}</td>
                        <td>{{ tag.name }}</td>
                        <td>{{ tag.projectsCount }}</td>
                        <td class="is-flex">
                            <a href="{{ path('admin.tag.edit', {id: tag.id}) }}" class="button is-primary">Edit</a>
                            <form action="{{ path('admin.tag.delete', {id: tag.id}) }}" method="post">
                                <input type="hidden" name="_method" value="DELETE">
                                <button class="button is-danger">Delete</button>
                            </form>
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
{% endblock %}