{% extends 'admin/base.html.twig' %}

{% block title 'CMS - Tag Management' %}

{% block body %}

    <div class="container">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Name</th>
                    <th>Project related count</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                {% for tag in tags %}
                    <tr>
                        <td>{{ tag.id }}</td>
                        <td>{{ tag.name }}</td>
                        <td>{{ tag.projectsCount }}</td>
                        <td class="d-flex">
                            <a href="{{ path('admin.tag.edit', {id: tag.id}) }}" class="btn btn-primary">Edit</a>
                            <form action="{{ path('admin.tag.delete', {id: tag.id}) }}" method="post" class="d-inline">
                                <input type="hidden" name="_method" value="DELETE">
                                <button class="btn btn-error">Delete</button>
                            </form>
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>

{% endblock %}