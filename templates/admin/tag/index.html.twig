{% extends 'admin/base.html.twig' %}

{% block title 'CMS - Tag Management' %}

{% block body %}
        <div class="d-flex mb-4">
            <a href="{{ path('admin.tag.add') }}" class="btn btn-success d-flex"><i class="material-icons">add</i>Add</a>
        </div>
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Name</th>
                    <th>Project related count</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                {% for tag in tags %}
                    <tr>
                        <td>{{ tag.id }}</td>
                        <td>{{ tag.name }}</td>
                        <td>{{ tag.projectsCount }} project{{ tag.projectsCount > 1 ? 's' : '' }}</td>
                        <td class="d-flex">
                            <a href="{{ path('admin.tag.edit', {id: tag.id}) }}" class="btn btn-primary mr-2 d-flex"><i class="material-icons">edit</i>Edit</a>
                            <form action="{{ path('admin.tag.delete', {id: tag.id}) }}" class="d-inline" method="post">
                                <input type="hidden" name="_method" value="DELETE">
                                <button class="btn btn-danger d-flex"><i class="material-icons">delete</i>Delete</button>
                            </form>
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
{% endblock %}