{% extends 'admin/base.html.twig' %}

{% block title 'CMS - Categories' %}

{% block body %}
    <div class="d-flex mb-4">
        <a href="{{ path('admin.category.add') }}" class="btn btn-success">Add</a>
    </div>
    <table class="table table-striped">
        <thead>
            <tr>
                <th>ID</th>
                <th>Name</th>
                <th>Actions</th>
            </tr>
        </thead>

        <tbody>
            {% for category in categories %}
              <tr>
                  <td>{{ category.id }}</td>
                  <td>{{ category.name }}</td>
                  <td class="d-flex">
                      <a href="{{ path('admin.category.edit', {id: category.id}) }}" class="btn btn-primary">Edit</a>
                      <form action="{{ path('admin.category.delete', {id: category.id}) }}" class="d-inline" method="post">
                          <input type="hidden" name="_method" value="DELETE">
                          <button class="btn btn-danger">Delete</button>
                      </form>
                  </td>
              </tr>
            {% endfor %}
        </tbody>
    </table>
{% endblock %}